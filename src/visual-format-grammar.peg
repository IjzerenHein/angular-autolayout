{
  function extend(dst) {
    for (var i = 1; i < arguments.length; i++) {
      for (var k in arguments[i]) {
        dst[k] = arguments[i][k];
      }
    }
    return dst;
  }
}

visualFormatString
  = o:(orientation ":")?
    superto:(superview connection)?
    view:view
    views:(connection view)*
    tosuper:(connection superview)?
  { return {
      orientation: o ? o[0] : 'horizontal',
      cascade: (superto || []).concat(
        [view],
        [].concat.apply([], views),
        (tosuper || [])
      )
    }
  }

orientation
  = orient:("H" / "V") { return orient == 'H' ? 'horizontal' : 'vertical' }

superview
  = "|" { return { view: null } }

view
  = "[" viewName:viewName predicates:predicateListWithParens? "]"
  { return extend({ view: viewName }, predicates ? { constrains: predicates } : {}) }

connection
  = "-" predicateList:predicateList "-" { return predicateList }
  / "-" { return [{ relatedBy: 'equal', constant: 'default' }] }
  / "" { return [{ relatedBy: 'equal', constant: 0 }] }

predicateList
  = simplePredicate
  / predicateListWithParens

simplePredicate
  = n:number { return [{ relatedBy: 'equal', constant: n }] }

predicateListWithParens
  = "(" p:predicate ps:("," predicate)* ")"
  { return [p].concat(ps.map(function(p){ return p[1] })) }

predicate
  = r:relation? o:objectOfPredicate p:("@" priority)?
  { return extend({ relatedBy: 'equal' }, (r || {}), o, (p ? p[1]: {})) }

relation
  = "==" { return { relatedBy: 'equal' } }
  / "<=" { return { relatedBy: 'lessOrEqual' } }
  / ">=" { return { relatedBy: 'greaterOrEqual' } }

objectOfPredicate
  = constant
  / viewName

priority
  = n:number { return { priority: n } }

constant
  = n:number { return { constant: n } }

viewName
  = $[a-zA-Z#\.]+

number
  = digits:[0-9]+ { return parseInt(digits.join(""), 10); }